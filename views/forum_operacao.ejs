<%- include('../public/partials/header.ejs') %>

<body>
    <%- include('../public/partials/nav.ejs') %>
    <div class='container'>
        <div class="card" id="formulario-procedimento">
            <div class="card-header">
                <h3>Formalize abaixo Alterações/Ajustes para o procedimento Nº:<%=procedimento.id%></h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/save_op">
                    <label>Título:</label>
                    <input type='text' placeholder="Título" class="form-control" name="titulo">
                    <br><label>Descrição:</label>
                    <textarea placeholder="Descreva sua pergunta aqui:" class="form-control"
                        name="descricao"></textarea>
                    <br>
                    <input type="hidden" name="resposta" value="<%=procedimento.id%>">
                    <button class="btn btn-success">Enviar</button>
                </form>
            </div>
        </div>
    </div>