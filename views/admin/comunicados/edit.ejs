<%- include('../../../public/partials/header.ejs')%>

    <%- include('../../../public/partials/nav.ejs')%>
<body>
        <div class="container">
            <br>
            <div class="card">
                <div class="card-header">
                    <h2>Edição de comunicados</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/comunicados/update">
                        <input class="form-control" type="text" name="titulo"
                            placeholder="Denina o titulo de seu comunicado" value="<%=comunicados.titulo%>">
                            <br>
                            <textarea class="form-control" name="body" placeholder="Escreva o comunicado aqui"
                            id="article"><%=comunicados.comunicado%></textarea>
                            <p>Informe o status desse comunicado abaixo:</p>
                            <select name="status" class="form-control">
                                <option value="Ativado">Ativado</option>
                                <option value="Desativado">Desativado</option>
                            </select>
                            <p>Informe a importancia desse comunicado:</p>
                            <select name="importancia" class="form-control">
                                <option value="normal">normal</option>
                                <option value="alta">alta</option>
                            </select>
                            <p>Informe a data e hora de expiração:</p>
                            <input name="dataExp" type="date" value="<%=comunicados.dataDeExpiracao%>">
                            <input type="hidden" name="id" value="<%=comunicados.id%>">
                            <br>
                            <br>
                        <button class="btn btn-success">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('../../../public/partials/footer-.ejs')%>